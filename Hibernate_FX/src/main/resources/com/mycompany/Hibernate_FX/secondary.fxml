<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.Hibernate_FX.SecondaryController">
   <center>
      <VBox alignment="CENTER" prefHeight="582.0" prefWidth="893.0" spacing="20.0" style="-fx-background-color: #EDAD36;">
          <children>
            <TableView fx:id="tabla" onMouseClicked="#seleccionar" prefHeight="288.0" prefWidth="853.0" style="-fx-background-color: #FFDFA4;">
              <columns>
                <TableColumn fx:id="colId" prefWidth="75.0" text="Id" />
                  <TableColumn fx:id="colProducto" prefWidth="213.0" text="Producto" />
                  <TableColumn fx:id="colFecha" prefWidth="213.0" text="Fecha" />
                  <TableColumn fx:id="colEstado" prefWidth="75.0" text="Estado" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <FlowPane alignment="CENTER_RIGHT" prefHeight="64.0" prefWidth="734.0">
               <children>
                    <Button fx:id="btnVer" style="-fx-background-color: #55AC1F;" text="Ver pedidos" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <FlowPane.margin>
                        <Insets right="160.0" />
                     </FlowPane.margin>
                  </Button>
                  <Button fx:id="btnRecoger" layoutX="703.0" layoutY="10.0" onAction="#entregado" prefHeight="59.0" prefWidth="227.0" style="-fx-background-color: #FF8807;" text="Recoger pedido" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                     <FlowPane.margin>
                        <Insets right="75.0" />
                     </FlowPane.margin>
                  </Button>
                  <Button fx:id="btnAcercaDe" layoutX="624.0" layoutY="23.0" onAction="#masinfo" style="-fx-background-color: #1F6BAC;" text="Acerca de" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <FlowPane.margin>
                        <Insets right="50.0" />
                     </FlowPane.margin>
                  </Button>
                  <Button fx:id="btnSalir" layoutX="662.0" layoutY="10.0" onAction="#switchToPrimary" style="-fx-background-color: #F02424;" text="Salir" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <FlowPane.margin>
                        <Insets right="20.0" />
                     </FlowPane.margin>
                  </Button>
               </children>
            </FlowPane>
          </children>
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
      </VBox>
   </center>
   <top>
        <Label text="Lista de pedidos" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="48.0" />
         </font>
      </Label>
   </top>
</BorderPane>
